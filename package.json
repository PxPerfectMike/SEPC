{
  "name": "@pxperfectmike/sepc",
  "version": "2.0.0",
  "description": "Super Easy Programmed CSS - A pragmatic JavaScript library for programmatic CSS manipulation in plugin systems, legacy applications, and rapid prototyping",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "dev": "vite",
    "build": "tsup",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "type-check": "tsc --noEmit",
    "docs": "typedoc",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "prepublishOnly": "npm run type-check && npm run test && npm run build"
  },
  "keywords": [
    "sepc",
    "css",
    "style",
    "styling",
    "programmatic",
    "dom",
    "manipulation",
    "plugin",
    "legacy",
    "prototyping"
  ],
  "author": "Michael Baker",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PxPerfectMike/SEPC.git"
  },
  "bugs": {
    "url": "https://github.com/PxPerfectMike/SEPC/issues"
  },
  "homepage": "https://github.com/PxPerfectMike/SEPC#readme",
  "devDependencies": {
    "@testing-library/dom": "^10.4.0",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^3.0.0",
    "@vitest/ui": "^3.0.0",
    "eslint": "^9.0.0",
    "happy-dom": "^20.0.10",
    "prettier": "^3.3.0",
    "tsup": "^8.3.0",
    "typedoc": "^0.27.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.0",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
